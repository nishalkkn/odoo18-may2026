<?xml version="1.0" encoding="UTF-8"?>
<!-- Added new button in pos session -->
<templates id="template" xml:space="preserve">
<!--    Inheriting Navbar and adding the new button-->
    <t t-name="Navbar" t-inherit="point_of_sale.Navbar"
       t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-leftheader')]" position="inside">
                <button class="sale-order-button btn btn-primary" t-on-click="onClick">Click And Collect</button>
        </xpath>
    </t>
</templates>
