<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="customer_type_view_form" model="ir.ui.view">
        <field name="name">discount.type.view.form</field>
        <field name="model">discount.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_customer_type" model="ir.actions.act_window">
        <field name="name">Customer Type</field>
        <field name="res_model">customer.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Customer Type
            </p>
        </field>
    </record>
</odoo>