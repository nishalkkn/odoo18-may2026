<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Definition of the list view for 'tag.color' model -->
    <record id="tag_color_view_list" model="ir.ui.view">
        <field name="name">tag.color.view.list</field>
        <field name="model">tag.color</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="false">
                <field name="name"/>
                <field name="color" widget="color"/>
            </list>
        </field>
    </record>
    <!-- Action for opening the Tag Color list view -->
    <record id="action_tag_colour_view" model="ir.actions.act_window">
        <field name="name">Tag Color</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tag.color</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
